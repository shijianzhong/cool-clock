{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "hello",
  "main": "main.js",
  "scripts": {
    "dev":"electron .",
    "build": "electron-builder",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "sh",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.4.0",
    "electron": "^32.0.2",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "asar": true,
    "files": [
      "./**/*",
    ],
    "appId": "com.cool.clock",
    "productName": "coolClock",
    "copyright": "Copyright Â© 2022 coolClock",
    "icon": "./images/icon.ico",
    "win": {
      "icon": "./images/icon.ico",
      "artifactName": "digital_shield.${ext}",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "./images/icon.icns",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "./Icon.icns",
      "uninstallerIcon": "./Icon.icns",
      "installerHeader": "./Icon.icns",
      "installerHeaderIcon": "./Icon.icns",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "coolClock"
    }
  }
}